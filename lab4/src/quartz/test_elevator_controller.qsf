# -------------------------------------------------------------------------- #
# Test configuration for Elevator Controller
# This tests the elevator controller logic with timer
# -------------------------------------------------------------------------- #

set_global_assignment -name FAMILY "Cyclone V"
set_global_assignment -name DEVICE 5CSEMA5F31C6
set_global_assignment -name TOP_LEVEL_ENTITY test_elevator_controller
set_global_assignment -name PROJECT_CREATION_TIME_DATE "10:05:03  OCTOBER 28, 2025"
set_global_assignment -name LAST_QUARTUS_VERSION "24.1std.0 Lite Edition"
set_global_assignment -name VHDL_FILE elevator_controller.vhd
set_global_assignment -name VHDL_FILE timer.vhd
set_global_assignment -name VHDL_FILE ssd.vhd
set_global_assignment -name VHDL_FILE test_elevator_controller.vhd
set_global_assignment -name PROJECT_OUTPUT_DIRECTORY output_files
set_global_assignment -name BOARD "DE1-SoC Board"

# Pin Assignments
# 50MHz Clock
set_location_assignment PIN_AF14 -to clk

# Buttons (active low)
set_location_assignment PIN_AA14 -to enable
set_location_assignment PIN_AA15 -to reset

# Switches for next floor SW[3:0]
set_location_assignment PIN_AB12 -to next_floor_sw[0]
set_location_assignment PIN_AC12 -to next_floor_sw[1]
set_location_assignment PIN_AF9 -to next_floor_sw[2]
set_location_assignment PIN_AF10 -to next_floor_sw[3]

# LEDs for current floor LEDR[3:0]
set_location_assignment PIN_V16 -to current_floor_leds[0]
set_location_assignment PIN_W16 -to current_floor_leds[1]
set_location_assignment PIN_V17 -to current_floor_leds[2]
set_location_assignment PIN_V18 -to current_floor_leds[3]

# LED for door state LEDR[8]
set_location_assignment PIN_Y20 -to door_state_led

# LED for clear request LEDR[9]
set_location_assignment PIN_Y21 -to clear_request_led

# Seven Segment Display HEX0 (current floor)
set_location_assignment PIN_AE26 -to ssd_current[0]
set_location_assignment PIN_AE27 -to ssd_current[1]
set_location_assignment PIN_AE28 -to ssd_current[2]
set_location_assignment PIN_AG27 -to ssd_current[3]
set_location_assignment PIN_AF28 -to ssd_current[4]
set_location_assignment PIN_AG28 -to ssd_current[5]
set_location_assignment PIN_AH28 -to ssd_current[6]

set_global_assignment -name PARTITION_NETLIST_TYPE SOURCE -section_id Top
set_global_assignment -name PARTITION_FITTER_PRESERVATION_LEVEL PLACEMENT_AND_ROUTING -section_id Top
set_global_assignment -name PARTITION_COLOR 16764057 -section_id Top
set_instance_assignment -name PARTITION_HIERARCHY root_partition -to | -section_id Top
