# -------------------------------------------------------------------------- #
# Test configuration for Request Handler
# This tests the request handler logic
# -------------------------------------------------------------------------- #

set_global_assignment -name FAMILY "Cyclone V"
set_global_assignment -name DEVICE 5CSEMA5F31C6
set_global_assignment -name TOP_LEVEL_ENTITY test_request_handler
set_global_assignment -name PROJECT_CREATION_TIME_DATE "10:05:03  OCTOBER 28, 2025"
set_global_assignment -name LAST_QUARTUS_VERSION "24.1std.0 Lite Edition"
set_global_assignment -name VHDL_FILE elevator_controller.vhd
set_global_assignment -name VHDL_FILE request_handler.vhd
set_global_assignment -name VHDL_FILE ssd.vhd
set_global_assignment -name VHDL_FILE test_request_handler.vhd
set_global_assignment -name PROJECT_OUTPUT_DIRECTORY output_files
set_global_assignment -name BOARD "DE1-SoC Board"

# Pin Assignments
# 50MHz Clock
set_location_assignment PIN_AF14 -to clk

# Buttons (active low)
set_location_assignment PIN_AA14 -to request_button
set_location_assignment PIN_AA15 -to reset

# Switches for floor selection SW[3:0]
set_location_assignment PIN_AB12 -to floor_select[0]
set_location_assignment PIN_AC12 -to floor_select[1]
set_location_assignment PIN_AF9 -to floor_select[2]
set_location_assignment PIN_AF10 -to floor_select[3]

# Switches for current floor simulation SW[7:4]
set_location_assignment PIN_AD11 -to current_floor_sw[0]
set_location_assignment PIN_AD12 -to current_floor_sw[1]
set_location_assignment PIN_AE11 -to current_floor_sw[2]
set_location_assignment PIN_AC9 -to current_floor_sw[3]

# LEDs for next floor LEDR[3:0]
set_location_assignment PIN_V16 -to next_floor_leds[0]
set_location_assignment PIN_W16 -to next_floor_leds[1]
set_location_assignment PIN_V17 -to next_floor_leds[2]
set_location_assignment PIN_V18 -to next_floor_leds[3]

# LEDs for current floor LEDR[7:4]
set_location_assignment PIN_W17 -to current_floor_leds[0]
set_location_assignment PIN_W19 -to current_floor_leds[1]
set_location_assignment PIN_Y19 -to current_floor_leds[2]
set_location_assignment PIN_W20 -to current_floor_leds[3]

# LED for pending requests LEDR[9]
set_location_assignment PIN_Y21 -to has_requests

# Seven Segment Display HEX0 (next floor)
set_location_assignment PIN_AE26 -to ssd_next[0]
set_location_assignment PIN_AE27 -to ssd_next[1]
set_location_assignment PIN_AE28 -to ssd_next[2]
set_location_assignment PIN_AG27 -to ssd_next[3]
set_location_assignment PIN_AF28 -to ssd_next[4]
set_location_assignment PIN_AG28 -to ssd_next[5]
set_location_assignment PIN_AH28 -to ssd_next[6]

# Seven Segment Display HEX1 (current floor)
set_location_assignment PIN_AJ29 -to ssd_current[0]
set_location_assignment PIN_AH29 -to ssd_current[1]
set_location_assignment PIN_AH30 -to ssd_current[2]
set_location_assignment PIN_AG30 -to ssd_current[3]
set_location_assignment PIN_AF29 -to ssd_current[4]
set_location_assignment PIN_AF30 -to ssd_current[5]
set_location_assignment PIN_AD27 -to ssd_current[6]

set_global_assignment -name PARTITION_NETLIST_TYPE SOURCE -section_id Top
set_global_assignment -name PARTITION_FITTER_PRESERVATION_LEVEL PLACEMENT_AND_ROUTING -section_id Top
set_global_assignment -name PARTITION_COLOR 16764057 -section_id Top
set_instance_assignment -name PARTITION_HIERARCHY root_partition -to | -section_id Top
