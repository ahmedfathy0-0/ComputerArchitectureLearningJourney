# -------------------------------------------------------------------------- #
# Test configuration for Seven Segment Display
# This tests the basic SSD component and pin connections
# -------------------------------------------------------------------------- #

set_global_assignment -name FAMILY "Cyclone V"
set_global_assignment -name DEVICE 5CSEMA5F31C6
set_global_assignment -name TOP_LEVEL_ENTITY test_ssd
set_global_assignment -name PROJECT_CREATION_TIME_DATE "10:05:03  OCTOBER 28, 2025"
set_global_assignment -name LAST_QUARTUS_VERSION "24.1std.0 Lite Edition"
set_global_assignment -name VHDL_FILE ssd.vhd
set_global_assignment -name VHDL_FILE test_ssd.vhd
set_global_assignment -name PROJECT_OUTPUT_DIRECTORY output_files
set_global_assignment -name BOARD "DE1-SoC Board"

# Pin Assignments
# Switches SW[3:0] for floor selection
set_location_assignment PIN_AB12 -to floor_select[0]
set_location_assignment PIN_AC12 -to floor_select[1]
set_location_assignment PIN_AF9 -to floor_select[2]
set_location_assignment PIN_AF10 -to floor_select[3]

# Seven Segment Display HEX0
set_location_assignment PIN_AE26 -to ssd_floor[0]
set_location_assignment PIN_AE27 -to ssd_floor[1]
set_location_assignment PIN_AE28 -to ssd_floor[2]
set_location_assignment PIN_AG27 -to ssd_floor[3]
set_location_assignment PIN_AF28 -to ssd_floor[4]
set_location_assignment PIN_AG28 -to ssd_floor[5]
set_location_assignment PIN_AH28 -to ssd_floor[6]

set_global_assignment -name PARTITION_NETLIST_TYPE SOURCE -section_id Top
set_global_assignment -name PARTITION_FITTER_PRESERVATION_LEVEL PLACEMENT_AND_ROUTING -section_id Top
set_global_assignment -name PARTITION_COLOR 16764057 -section_id Top

set_instance_assignment -name PARTITION_HIERARCHY root_partition -to | -section_id Top